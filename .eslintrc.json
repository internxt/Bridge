{
    "env": {
        "node": true,
        "browser": false,
        "commonjs": true,
        "es2021": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "curly": [
            "error",
            "all"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "space-in-parens": [
            "error",
            "never"
        ],
        "eqeqeq": "error",
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "no-multi-spaces": "error",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "template-curly-spacing": [
            "error",
            "never"
        ],
        "keyword-spacing": [
            "error"
        ],
        "space-before-blocks": ["error", "always"],
        "brace-style": [2, "1tbs", { "allowSingleLine": false }],
        "newline-before-return": ["error"]
    }
}
